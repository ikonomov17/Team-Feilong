<div class="container">
    <form class="form-horizontal">
        <fieldset>

            <!-- Form Name -->
            <legend>My Profile -> Account setting</legend>

            <!-- Text input-->


            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="nameinput">Change Name</label>
                <div class="col-md-4">
                    <input id="nameinput" name="nameinput" type="text" value="{{displayName}}" class="form-control input-md">
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-4 control-label" for="emailnput">Change Email ID</label>
                <div class="col-md-4">
                    <input id="emailnput" name="emailnput" type="email" value="{{email}}" class="form-control input-md">
                </div>
            </div>

            <!-- Password input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="passwordinput">password</label>
                <div class="col-md-4">
                    <input id="passwordinput" name="passwordinput" type="password" placeholder="password" value="{{password}}" class="form-control input-md" required>

                </div>
            </div>

            <!-- Button -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="deletebutton">Delete my account</label>
                <div class="col-md-4">
                    <div id="deletebutton" name="deletebutton" class="btn btn-danger">Delete</div>
                </div>
            </div>


            <!-- Button -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="savebutton"></label>
                <div class="col-md-4">
                    <div id="savebutton" name="savebutton" class="btn btn-primary">Save</div>
                </div>


        </fieldset>
    </form>

    </div>